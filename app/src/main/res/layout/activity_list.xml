<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_color_deep"
            app:navigationIcon="@drawable/qmui_icon_topbar_back"
            app:titleMarginStart="110dp"
            app:titleTextColor="@color/white" />

        <android.support.design.widget.TabLayout
            android:id="@+id/list_tab"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/white"
            app:tabSelectedTextColor="@color/cardview_dark_background"
            app:tabTextColor="@color/icon_gray"
            android:layout_height="45dp"
            app:tabIndicatorColor="@color/theme_color_deep"
            app:tabGravity="fill"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>