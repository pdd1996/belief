<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--顶部-->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:background="@color/theme_color_shallow">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dynamic_details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="160dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/ic_share_white"
            android:id="@+id/bt_share_outside"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/share_detail_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_detail_name"
                android:text="李老师"
                />


        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_detail_content"
            android:text="三八妇女节已经过去了，离项目原型汇报的日子还会远吗？业务发展部李经理提醒各个项目小组，3月14日各个小组安排1-2位主讲进行项目原型汇
报，要求：1、每组汇报时间为5分钟，其他小组及需求方提问5分钟（现场安排计时）；2、展示嘎达嘎达获得较佳啊的"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="250dp"
            android:id="@+id/share_detail_img"
            android:layout_height="250dp" />

    </LinearLayout>



</LinearLayout>
